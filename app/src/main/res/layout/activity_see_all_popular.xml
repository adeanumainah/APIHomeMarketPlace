<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SeeAllPopularActivity">

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="79dp"
        android:layout_height="87dp"
        android:id="@+id/psBar"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/searchViewTop"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_backstage_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:src="@drawable/ic_rightarrow" />

        <TextView
            android:id="@+id/tv_title_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_70dp"
            android:layout_marginTop="@dimen/_18dp"
            android:padding="@dimen/_5dp"
            android:text="@string/popular"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold" />

        <!--        <ImageView-->
<!--            android:id="@+id/iv_favorite_popular"-->
<!--            android:layout_width="@dimen/_40dp"-->
<!--            android:layout_height="@dimen/_45dp"-->
<!--            android:layout_marginStart="@dimen/_45dp"-->
<!--            android:layout_marginTop="@dimen/_24dp"-->
<!--            android:padding="@dimen/_5dp"-->
<!--            android:src="@drawable/ic_favorite_24" />-->

    </LinearLayout>


    <HorizontalScrollView
        android:id="@+id/hs_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_marginTop="24dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp">

            <TextView
                android:id="@+id/tv_bekasi_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@drawable/bg_btn"
                android:padding="@dimen/_8dp"
                android:text="Bekasi"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/tv_jakarta_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@drawable/bg_btn"
                android:padding="@dimen/_8dp"
                android:text="Jakarta"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/tv_bogor_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@drawable/bg_btn"
                android:padding="@dimen/_8dp"
                android:text="Bogor"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/tv_tanggerang_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@drawable/bg_btn"
                android:padding="@dimen/_8dp"
                android:text="Tanggerang"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sp" />


            <TextView
                android:id="@+id/tv_depok_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@drawable/bg_btn"
                android:padding="@dimen/_8dp"
                android:text="Depok"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/tv_sumatera_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@drawable/bg_btn"
                android:padding="@dimen/_8dp"
                android:text="Sumatera"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sp" />


            <TextView
                android:id="@+id/tv_jawa_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@drawable/bg_btn"
                android:padding="@dimen/_8dp"
                android:text="Jawa"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/tv_kalimantan_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:background="@drawable/bg_btn"
                android:padding="@dimen/_8dp"
                android:text="Kalimantan"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sp" />

        </LinearLayout>

    </HorizontalScrollView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchViewTop"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/ll1"
        android:layout_marginTop="@dimen/_80dp"
        android:layout_marginStart="@dimen/_24dp"
        android:layout_marginEnd="@dimen/_24dp"
        android:background="@android:color/white"
        app:boxCornerRadiusBottomEnd="@dimen/_8p"
        app:boxCornerRadiusBottomStart="@dimen/_8p"
        app:boxCornerRadiusTopEnd="@dimen/_8p"
        app:boxCornerRadiusTopStart="@dimen/_8p">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_popular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_search_black_24dp"
            android:drawablePadding="@dimen/_8p"
            android:hint="@string/searchRumah" />
    </com.google.android.material.textfield.TextInputLayout>

<!--    <EditText-->
<!--        android:id="@+id/searchView"-->
<!--        android:layout_width="@dimen/_385dp"-->
<!--        android:layout_marginStart="@dimen/_12dp"-->
<!--        android:layout_height="@dimen/_45dp"-->
<!--        android:layout_alignParentTop="true"-->
<!--        android:layout_below="@id/ll1"-->
